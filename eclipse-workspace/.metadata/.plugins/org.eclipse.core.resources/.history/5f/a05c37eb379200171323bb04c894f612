package modelo;

public class Numero {
  //Atrivutos
	private int n;
  
  //MEtodos
  public Numero() {} //Constructor
  public Numero(int n) { //Contructor
	  this.n=n;
  }
  public void setNumero(int n) { //Asigna un valor a n
	  this.n=n;
  }
  public int getNumero() { // Retorna n
	  return(this.n);
  }
 
 
  public boolean esPrimo() {
	  boolean primo;
	  int contador=0;
	  for(int i=2;i<=n;i++)
	  {
		  if(n%i==0) {
			  contador++;
		  }
	  }
	  if(contador==1) {
		  primo=true;
	  }
	  else {
		  primo=false;
	  }
		  
	  
	  
	  return (primo);
  }
  
  public boolean esPrimoMellizo() {
	  
	  boolean resultado=false;
	  
	   if(this.esPrimo()) {
		   
	   }
	  return resultado;
  }
  
 

  
}

